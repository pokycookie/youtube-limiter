{
  "name": "Youtube Limiter",
  "description": "Limit youtube usage time",
  "manifest_version": 3,
  "version": "1.0.0",
  "permissions": ["tabs", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
